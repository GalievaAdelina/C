cpp
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double a, b, perimeter, diagonal;
    cout << "Enter the length of side a: ";
    cin >> a;
    cout << "Enter the length of side b: ";
    cin >> b;
    perimeter = 2 * (a + b);
    diagonal = sqrt(a*a + b*b);
    cout << "Perimeter: " << perimeter << endl;
    cout << "Diagonal: " << diagonal << endl;
    return 0;
}
