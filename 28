#include <iostream>
#include <cmath> // для использования функции sqrt()
using namespace std;

int main() {
    double a, b, c, p;
    cout << "Введите катет a: ";
    cin >> a;
    cout << "Введите катет b: ";
    cin >> b;
    c = sqrt(pow(a, 2) + pow(b, 2)); // находим гипотенузу
    p = a + b + c; // находим периметр
    cout << "Периметр равен " << p << endl;
    return 0;
}
