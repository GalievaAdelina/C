cpp
#include <iostream>
using namespace std;

int main() {
    double a, b, sum, difference, product, quotient;
    cout << "Enter the first number: ";
    cin >> a;
    cout << "Enter the second number: ";
    cin >> b;
    sum = a + b;
    difference = a - b;
    product = a * b;
    quotient = a / b;
    cout << "Sum: " << sum << endl;
    cout << "Difference: " << difference << endl;
    cout << "Product: " << product << endl;
    cout << "Quotient: " << quotient << endl;
    return 0;
}
