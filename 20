#include <iostream>
#include <cmath>

using namespace std;

int main() {
    double r, s, c;
    cout << "Введите площадь круга: ";
    cin >> s;
    r = sqrt(s / M_PI); // находим радиус круга по его площади
    c = 2 * M_PI * r; // находим длину окружности по радиусу
    cout << "Длина окружности равна " << c << endl;
    return 0;
}
