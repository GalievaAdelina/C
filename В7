```c++
#include <iostream>

using namespace std;

const double PI = 3.14;

int main()
{
    double radius, circumference, area;

    cout << "Введите радиус круга: ";
    cin >> radius;

    circumference = 2 * PI * radius;
    area = PI * radius * radius;

    cout << "Длина окружности: " << circumference << endl;
    cout << "Площадь круга: " << area << endl;

    return 0;
}
```
