```c++
#include <iostream>
#include <cmath>

int main() {
    double a, b, c, P;
    std::cout << "Enter a: ";
    std::cin >> a;
    std::cout << "Enter b: ";
    std::cin >> b;

    c = std::sqrt(a*a + b*b);
    P = a + b + c;

    std::cout << "Hypotenuse c = " << c << std::endl;
    std::cout << "Perimeter P = " << P << std::endl;

    return 0;
}
```
