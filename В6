```cpp
#include<iostream>

using namespace std;

int main(){
    //Ввод значений длин ребер
    float a, b, c;
    cout << "Введите длину ребра a: ";
    cin >> a;
    cout << "Введите длину ребра b: ";
    cin >> b;
    cout << "Введите длину ребра c: ";
    cin >> c;
    
    //Вычисление объема и площади поверхности
    float V = a * b * c;
    float S = 2 * (a * b + b * c + a * c);
    
    //Вывод результата на экран
    cout << "Объем параллелепипеда: " << V << endl;
    cout << "Площадь поверхности параллелепипеда: " << S << endl;
    
    return 0;
}
```
