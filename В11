```cpp
#include <iostream>
#include <cmath>

using namespace std;

int main() {
    double a, b;
    cout << "Enter two non-zero numbers: ";
    cin >> a >> b;

    double sum, diff, prod, quotient;
    sum = abs(a) + abs(b);
    diff = abs(a) - abs(b);
    prod = abs(a) * abs(b);
    quotient = abs(a) / abs(b);

    cout << "Sum of their absolute values: " << sum << endl;
    cout << "Difference of their absolute values: " << diff << endl;
    cout << "Product of their absolute values: " << prod << endl;
    cout << "Quotient of their absolute values: " << quotient << endl;

    return 0;
}
```

