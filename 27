#include <iostream>
using namespace std;

int main() {
    float r1, r2, s;
    const float pi = 3.14;
    cout << "Введите значение внешнего радиуса: ";
    cin >> r1;
    cout << "Введите значение внутреннего радиуса: ";
    cin >> r2;
    if(r1 <= r2) {
        cout << "Ошибка: внешний радиус должен быть больше внутреннего." << endl;
        return 0;
    }
    s = pi * (r1 * r1 - r2 * r2);
    cout << "Площадь кольца с внешним радиусом " << r1 << " и внутренним радиусом " << r2 << " равна " << s << endl;
    return 0;
}
